{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": true
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
